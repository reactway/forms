{
    "extends": ["@reactway"],
    "rules": {
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/array-type": [
            "error",
            {
                "default": "array-simple",
                "readonly": "generic"
            }
        ],
        "@typescript-eslint/no-use-before-define": "off",
        "react-hooks/exhaustive-deps": [
            "warn",
            {
                "additionalHooks": "use.+"
            }
        ]
    },
    "parserOptions": {
        "project": "./tsconfig.json"
    }
}
